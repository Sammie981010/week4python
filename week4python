def modify_file(input_file, output_file):
    """
    Reads from input_file, modifies its content,
    and writes the modified content to output_file.
    """
    try:
        with open(input_file, "r") as infile:
            content = infile.read()

        # üîπ Example modification: convert text to uppercase
        modified_content = content.upper()

        with open(output_file, "w") as outfile:
            outfile.write(modified_content)

        print(f"Modified file has been saved as '{output_file}'")

    except FileNotFoundError:
        print(f"Error: The file '{input_file}' does not exist.")
    except Exception as e:
        print(f"An error occurred: {e}")


# Example usage:
input_file = "original.txt"
output_file = "modified.txt"

modify_file(input_file, output_file)


#error handling

def read_file():
    """
    Ask the user for a filename and try to read it.
    Handles errors if the file does not exist or cannot be read.
    """
    filename = input("Enter the filename to read: ")

    try:
        with open(filename, "r") as file:
            content = file.read()
            print("\n‚úÖ File content:")
            print(content)

    except FileNotFoundError:
        print(f"‚ùå Error: The file '{filename}' does not exist.")
    except PermissionError:
        print(f"‚ùå Error: You don‚Äôt have permission to read '{filename}'.")
    except Exception as e:
        print(f"‚ö†Ô∏è An unexpected error occurred: {e}")


# Run the function
read_file()
